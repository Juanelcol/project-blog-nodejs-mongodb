{{#each errors}}
  <div class="alert alert-danger">{{erro}}</div>
{{else}}
  <div>Nada a exibir</div>
{{/each}}

<h3>Criar novo usuário</h3>
<div class="card">
  <div class="card-body">
    <form action="" method="post">
      <label for="nome">Nome:</label>
        <input type="text" class="form-control" name="nome">
      <label for="email">Email:</label>
        <input type="email" class="form-control" name="email">
      <label for="senha">Senha:</label>
        <input type="password" class="form-control" name="senha" placeholder="Insira uma senha com pelo menos 6 caracteres">
      <label for="senha2">Repita sua senha:</label>
        <input type="password" class="form-control" name="senha2">
      <button type="submit" class="btn btn-success mt-4">Criar usuário</button>
    </form>
  </div>
</div>