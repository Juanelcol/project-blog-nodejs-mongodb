{{#each errors}}
  <div class="alert alert-danger">{{erro}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <form action="/admin/postagens/nova" method="post">
      <label for="titulo">Título</label>
      <input type="text" name="titulo" class="form-control">
      <label for="slug">Slug</label>
      <input type="text" name="slug" class="form-control">
      <label for="descricao">Descrição</label>
      <input type="text" name="descricao" class="form-control">
      <label for="conteudo">Conteúdo</label>
      <textarea class="form-control" name="conteudo"></textarea>
      <label for="categoria" class="mt-4">Categoria:</label>
      <select name="categoria" class="custom-select mt-4" style="width: 100%">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select><br>
      <button type="submit" class="btn btn-success mt-4">Salvar postagem</button>
    </form>
  </div>
</div>